{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "dev",
      "type": "shell",
      "command": "bun run dev",
      "group": "build",
      "isBackground": true,
      "problemMatcher": []
    },
    {
      "label": "build",
      "type": "shell",
      "command": "bun run build",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": ["$tsc"]
    },
    {
      "label": "typecheck",
      "type": "shell",
      "command": "bun run typecheck",
      "group": "test",
      "problemMatcher": ["$tsc"]
    },
    {
      "label": "lint",
      "type": "shell",
      "command": "bun run lint",
      "group": "test",
      "problemMatcher": ["$eslint-stylish"]
    },
    {
      "label": "lint:fix",
      "type": "shell",
      "command": "bun run lint:fix",
      "group": "test",
      "problemMatcher": ["$eslint-stylish"]
    },
    {
      "label": "docker:dev",
      "type": "shell",
      "command": "docker compose --profile dev up --build",
      "group": "build",
      "isBackground": true,
      "problemMatcher": []
    },
    {
      "label": "docker:prod",
      "type": "shell",
      "command": "docker compose --profile prod up --build",
      "group": "build",
      "isBackground": true,
      "problemMatcher": []
    }
  ]
}
