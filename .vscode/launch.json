{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Dev Server",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/tsx",
      "args": ["backend/index.ts"],
      "cwd": "${workspaceFolder}",
      "env": {
        "PORT": "3000",
        "NODE_ENV": "development"
      },
      "console": "integratedTerminal",
      "restart": true,
      "skipFiles": ["<node_internals>/**", "node_modules/**"]
    },
    {
      "name": "Production Build",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/dist/backend/index.js",
      "cwd": "${workspaceFolder}",
      "env": {
        "PORT": "3000",
        "NODE_ENV": "production"
      },
      "preLaunchTask": "build",
      "console": "integratedTerminal",
      "skipFiles": ["<node_internals>/**", "node_modules/**"]
    }
  ]
}
